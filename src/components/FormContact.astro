---
import { useTranslations, getLangFromUrl } from "../i18n/tranlate";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="contact-form">
    <span class="heading">{t("form.contact.title")}</span>
    <form action="https://formspree.io/f/xnnqonwb" method="POST">
        <label for="name">{t("form.contact.name")}</label>
        <input type="text" required="" />
        <label for="email">{t("form.contact.email")}</label>
        <input type="email" id="email" name="email" required="" />
        <label for="message">{t("form.contact.message")}</label>
        <textarea id="message" name="message" required=""></textarea>
        <button type="submit">{t("form.contact.submit")}</button>
    </form>
</div>
<style>
    .contact-form {
        background-color: #f2f2f2;
        padding: 20px;
        border-radius: 10px;
    }
    html.dark .contact-form {
        box-shadow: 0px 0px 5px 5px rgba(0, 0, 0, 0.2);
        background-color: #444444;
    }

    .contact-form label {
        color: black;
    }
    html.dark label {
        color: white !important;
    }

    .contact-form .heading {
        font-size: 24px;
        color: black;
        margin-bottom: 12px;
        font-weight: bold;
        display: block;
    }
    html.dark .heading {
        color: white !important;
    }

    .contact-form form {
        display: flex;
        flex-direction: column;
    }

    .contact-form label {
        margin-bottom: 10px;
    }

    textarea {
        resize: none;
        height: 80px;
        width: auto;
    }

    .contact-form input,
    .contact-form textarea {
        padding: 10px;
        border: none;
        border-radius: 5px;
        margin-bottom: 20px;
    }
    html.dark .contact-form input,
    html.dark .contact-form textarea {
        background-color: #333;
        color: white;
    }
    .contact-form input:focus,
    .contact-form textarea:focus {
        outline: none;
        box-shadow: 0 0 5px var(--accent);
        transform: scale(1.03);
        transition: transform 0.3s ease-in-out;
    }

    .contact-form button[type="submit"] {
        background-color: var(--accent);
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
    }

    .contact-form button[type="submit"]:hover {
        transform: scale(1.03);
        transition: transform 0.3s ease-in-out;
    }
</style>

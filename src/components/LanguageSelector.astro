---
import { languages } from "../i18n/ui";
import { getLangFromUrl } from "../i18n/tranlate";
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"select">;

const actual_lang = getLangFromUrl(Astro.url);
---

<div class="language-dropdown-container">
    <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="size-6 language-dropdown-icon">
        <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="m10.5 21 5.25-11.25L21 21m-9-3h7.5M3 5.621a48.474 48.474 0 0 1 6-.371m0 0c1.12 0 2.233.038 3.334.114M9 5.25V3m3.334 2.364C11.176 10.658 7.69 15.08 3 17.502m9.334-12.138c.896.061 1.785.147 2.666.257m-4.589 8.495a18.023 18.023 0 0 1-3.827-5.802"
        ></path>
    </svg>

    <select id="language-dropdown" class="internal-link" value={actual_lang} {...Astro.props}>
        {
            Object.keys(languages).map((lang) => (
                <option selected={lang === actual_lang} value={lang}>
                    {languages[lang as keyof typeof languages]}
                </option>
            ))
        }
    </select>
</div>

<script is:inline>
    const language_selector = document.querySelector("select#language-dropdown");
    language_selector.addEventListener("change", (event) => {
        const path = window.location.pathname.match(/[^\/]+/g) || [];
        path[0] = event.target.value;
        window.location.href = `/${path.join("/")}`;
    });
</script>

<style>
    .language-dropdown-container {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0.5rem 1rem;
    }

    .language-dropdown-icon {
        margin-right: 8px;
        width: 20px;
        height: 20px;
        color: currentColor;
    }

    select {
        display: inline-block;
        font-size: 1rem;
        background-color: transparent;
        border: none;
        cursor: pointer;
        color: var(--black);
    }

    nav .internal-links {
        display: flex;
        align-items: center;
    }

    nav select {
        font-size: 1rem;
        padding: 0.5rem 1rem;
        background-color: transparent;
        border: none;
        color: var(--black);
        cursor: pointer;
    }

    select:focus {
        outline: none;
    }
    html.dark option {
        background-color: #333;
        padding: 10px;
        border-radius: 10px;
    }

    @media screen and (max-width: 800px) {
        .language-dropdown-container {
            margin-top: 10px;
        }

        select {
            font-size: 1.1rem;
        }
    }
</style>

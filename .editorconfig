root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.html]
indent_size = 4
max_line_length = 120
quote_type = double
js_indent_size = 4

[*.css]
indent_size = 4
max_line_length = 120
quote_type = double

[*.{js,jsx,ts,tsx}]
indent_size = 4
max_line_length = 120
quote_type = single
semi = true
jsx_bracket_same_line = false

[*.astro]
indent_size = 4
max_line_length = 120
quote_type = double
jsx_bracket_same_line = false

[*.py]
indent_size = 4
max_line_length = 79
quote_type = double
